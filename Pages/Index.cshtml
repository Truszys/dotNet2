@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    if (Model.Name == null)
    {
        Model.Name = "User";
    }
}

<div>
    <h1 class="display-4">Welcome @Model.Name</h1>
    <form method="post">
        <label asp-for="FizzBuzz.Year"></label>
        <input asp-for="FizzBuzz.Year" />
        <span asp-validation-for="FizzBuzz.Year" class="text-danger" style="font-weight: 700;"></span>
        <label asp-for="FizzBuzz.FirstName"></label>
        <input asp-for="FizzBuzz.FirstName" />
        <span asp-validation-for="FizzBuzz.FirstName" class="text-danger" style="font-weight: 700;"></span>
        <label asp-for="FizzBuzz.LastName"></label>
        <input asp-for="FizzBuzz.LastName" />
        <span asp-validation-for="FizzBuzz.LastName" class="text-danger" style="font-weight: 700;"></span>
        <button type="submit">Zatwierdź</button>
        @{
            if (ModelState.IsValid && Model.Message != "")
            {
                <div class="alert alert-success">
                    @Model.Message
                </div>
            }
        }
    </form>
</div>
<div>
    <h2>Dzisiejsze wyszukiwania</h2>
    @if (Model.List == null || Model.List.Count == 0)
    {
        <div class="alert alert-danger">Brak dodanych danych</div>
    }
    else
    {
        <table class="fizzbuzz-db-data">
            <tbody>
                <tr>
                    <th><label asp-for="FizzBuzzForListVM.Year"></label></th>
                    <th><label asp-for="FizzBuzzForListVM.FullName"></label></th>
                    <th><label asp-for="FizzBuzzForListVM.Date"></label></th>
                    <th><label asp-for="FizzBuzzForListVM.Result"></label></th>
                </tr>
                @foreach (var item in Model.List)
                {
                    <tr>
                        <td>@item.Year</td>
                        <td>@item.FullName</td>
                        <td>@item.Date</td>
                        <td>@item.Result</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
